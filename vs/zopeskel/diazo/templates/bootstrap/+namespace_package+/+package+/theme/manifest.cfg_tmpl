[theme]
title = $description
description = Diazo Theme from ${namespace_package}.${package} package
rules = /++theme++${namespace_package}.${package}/rules.xml
prefix = /++theme++${namespace_package}.${package}
doctype = <!DOCTYPE html>
preview = preview.png

[theme:parameters]
portal_url = portal_state/portal_url
ajax_load = python: 'ajax_load' in request.form
anon_user = portal_state/anonymous

